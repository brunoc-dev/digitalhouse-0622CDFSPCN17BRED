<%- include('partials/header') %>

<main>
  <div class="column-header">
    <div class="column">
      <h4>ID</h4>
    </div>
    <div class="column">
      <h4>Nome</h4>
    </div>
    <div class="column">
      <h4>Livros</h4>
    </div>
    <div class="column">
      <h4>Ações</h4>
    </div>
  </div>

  <div class="body">
    <% autores.forEach(autor => { %>
      <div class="row">
        <span class="item"><%= autor.id %></span>
        <span class="item"><%= autor.nome %></span>
        <span class="item">
          <% autor.livros.forEach(livro => { %>
            <%= livro.nome %>, 
          <% }) %>
        </span>
        <span class="item actions">
          <a href="/biblioteca/autores/form/<%= autor.id %>">Editar</a>
          <form action="/biblioteca/autores/deletar/<%= autor.id %>?_method=DELETE" method="post">
            <button type="submit">Deletar</button>
          </form>
        </span>
      </div>
    <% }) %>
  </div>
</main>

<%- include('partials/footer') %>